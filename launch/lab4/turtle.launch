<launch>

    <!-- Turtlesim Node -->
    <node pkg="turtlesim" type="turtlesim_node" name="simulator"/>
    <node pkg="turtlesim" type="turtle_teleop_key" name="keyboard" output="screen"/>
    <!-- Axes -->
    <param name="scale_linear" value="2" type="double"/>
    <param name="scale_angular" value="2" type="double"/>
    <!-- Tf transofrm to add carrot -->
    <node pkg="tf" type="static_transform_publisher" name="car_2_camera_tf" args="0.3 0 0 0 0 0 turtle1  carrot  100" />
    <!-- Add rviz -->
    <node pkg="rviz" type="rviz" name="rviz" />

    <node name="turtle1_tf_broadcaster" pkg="super_alex_study_pkg" type="turtle_tf_broadcaster.py" respawn="false" output="screen" >
        <param name="turtle_tf_name" type="string" value="turtle1" />
        <remap from="input_pose" to="turtle1/pose"/>
    </node>
    
    <node name="turtle2_tf_broadcaster" pkg="super_alex_study_pkg" type="turtle_tf_broadcaster.py" respawn="false" output="screen" >
        <param name="turtle_tf_name" type="string" value="turtle2" />
        <remap from="input_pose" to="turtle2/pose"/>
    </node>

    <node name="turtle_pointer" pkg="super_alex_study_pkg" type="turtle_tf_listener.py" respawn="false" output="screen"/>
</launch>